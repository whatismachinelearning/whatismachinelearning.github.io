---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "content"  : "{{ post.excerpt | strip_html | xml_escape | truncatewords: site.excerpt_length}}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]